<div id='projects'></div>
<div class="projects-container">
  <div class='header-projects'>
    <h1>PROJECTS</h1>
  </div>
  <div class='projects-content'>
    <% data.projects.each_with_index do |project, index| %>
      <div class='project-<%= index + 1 %>'>
        <div class='project-left'>
          <a href="<%= project.live_link %>" target='_blank' class='project-img-link'>
            <img src="<%= project.image_path %>" alt="" class='project-img'>
          </a>
        </div>
        <div class='project-right'>
          <div class='project-description'>
            <h2><%= project.name %></h2>
            <p><%= project.description %></p>
            <%= partial 'partials/project_tech_stack' %>
            <div class='project-btns'>
              <a href="<%= project.live_link %>" target='_blank' class='view-project-btn'>View Project</a>
              <a href="<%= project.source_code_link %>" target='_blank' class='source-code-btn'>Source Code</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
